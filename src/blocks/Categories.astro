    </li>
  </ul>
</Section>

<style lang="scss" is:global>
  @use "scss/helpers" as *;

  .categories {
    position: relative;

    .container {
      gap: rem(20);
    }

    &__title {
      font-size: rem(24);
      text-transform: uppercase;

      strong {
        color: var(--primary);
        font-weight: 700;
      }
    }

    &__list {
      width: 100%;
      max-width: rem(1500);
      display: flex;
      align-items: stretch;
      justify-content: flex-start;
      flex-wrap: wrap;
      gap: rem(20);

      @include media("lg") {
        gap: rem(15) rem(10);
      }
      @include media("sm") {
        gap: rem(15);
      }
      @include media("xs") {
        gap: rem(8) rem(5);
      }

      &-item a {
        padding: rem(10) rem(25);
        width: fit-content;
        color: var(--primary);
        font-family: var(--font-secondary);
        font-size: 1rem;
        display: block;
        border-radius: rem(10);
        border: rem(1) solid var(--primary);
        transition: var(--transition-ease);

        @include media("xs") {
          padding: rem(8) rem(10);
          font-size: rem(14);
        }

        &:hover {
          color: #fff;
          background: var(--primary);
        }
      }
    }
  }
</style>
