---
import { H2, Image, Icon, Button, WpNav } from "ui";
import { menu } from "@/store";
import "./index.scss";
---

<header class="header">
  <div class="container group">
    <div class="header__top group-row">
      <a href="/" class="header__logo">
        <Image src="logo.svg" alt="logo" />
      </a>

      <div class="header__contacts group-row">
        <div class="header__contacts-item group">
          <div class="group-title group-row">Санкт-Петербург</div>
          <p class="group-desc">Без выходных</p>
        </div>
        <div class="header__contacts-item group">
          <a
            class="group-title group-row"
            href="tel:+78129241222"
            target="_blank"
            title="Телефон"
          >
            +7 (812) 924-12-22
          </a>
          <p class="group-desc">Без выходных</p>
        </div>
      </div>

      <Button data-modal="callback">ЗАКАЗАТЬ ЗВОНОК</Button>
    </div>

    <nav class="header__menu">
      <WpNav list={menu} />
    </nav>
  </div>

  <div class="mobile__menu">
    <div class="mobile__menu-tabs">
      <div
        class="mobile__menu-tab"
        data-toggle="catalog"
        role="button"
        tabindex="0"
        aria-label="Каталог"
      >
        <svg
          width="20"
          height="20"
          viewBox="0 0 20 20"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M16.3906 5.43164C16.3498 5.30626 16.2704 5.197 16.1638 5.11947C16.0572 5.04194 15.9287 5.00012 15.7969 5H14.375V2.8125C14.375 2.4668 14.0957 2.1875 13.75 2.1875H6.25C5.9043 2.1875 5.625 2.4668 5.625 2.8125V5H4.20312C4.07121 4.99982 3.94264 5.04152 3.83593 5.11909C3.72923 5.19666 3.6499 5.3061 3.60938 5.43164L2.1875 9.80469V17.1875C2.1875 17.5332 2.4668 17.8125 2.8125 17.8125H17.1875C17.5332 17.8125 17.8125 17.5332 17.8125 17.1875V9.80469L16.3906 5.43164ZM7.03125 3.59375H12.9688V5H7.03125V3.59375ZM16.4062 16.4062H3.59375V10.0273L4.77148 6.40625H15.2285L16.4062 10.0273V16.4062ZM12.7344 11.1719H10.625V9.0625C10.625 8.97656 10.5547 8.90625 10.4688 8.90625H9.53125C9.44531 8.90625 9.375 8.97656 9.375 9.0625V11.1719H7.26562C7.17969 11.1719 7.10938 11.2422 7.10938 11.3281V12.2656C7.10938 12.3516 7.17969 12.4219 7.26562 12.4219H9.375V14.5312C9.375 14.6172 9.44531 14.6875 9.53125 14.6875H10.4688C10.5547 14.6875 10.625 14.6172 10.625 14.5312V12.4219H12.7344C12.8203 12.4219 12.8906 12.3516 12.8906 12.2656V11.3281C12.8906 11.2422 12.8203 11.1719 12.7344 11.1719Z"
            fill="currentColor"></path>
        </svg>
        <span>Услуги</span>
      </div>

      <div
        class="mobile__menu-tab"
        data-toggle="menu"
        role="button"
        tabindex="0"
        aria-label="Меню"
      >
        <svg
          width="20"
          height="20"
          viewBox="0 0 20 20"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M0 1.79032C0 1.0777 0.577697 0.5 1.29032 0.5H7.74194C8.45456 0.5 9.03226 1.0777 9.03226 1.79032V8.24194C9.03226 8.95456 8.45456 9.53226 7.74194 9.53226H1.29032C0.577697 9.53226 0 8.95456 0 8.24194V1.79032Z"
